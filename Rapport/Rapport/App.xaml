<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             x:Class="Rapport.App">
    <Application.Resources>

        <!--
            Source:
            https://material.io/resources/color/#!/?view.left=1&view.right=0&primary.color=37474F&secondary.color=90A4AE&primary.text.color=ffffff
        -->

        <Color x:Key="PrimaryColor">#37474f</Color>
        <Color x:Key="PrimaryLightColor">#62727b</Color>
        <Color x:Key="PrimaryDarkColor">#102027</Color>
        <Color x:Key="PrimaryTextColor">#ffffff</Color>

        <Color x:Key="SecondaryColor">#90a4ae</Color>
        <Color x:Key="SecondaryLightColor">#c1d5e0</Color>
        <Color x:Key="SecondaryDarkColor">#62757f</Color>
        <Color x:Key="SecondaryTextColor">#000000</Color>
        
        <Color x:Key="TertiaryColor">#00A4EF</Color>
        <Color x:Key="QuaternaryColor">#7FBA00</Color>
        <Color x:Key="QuinaryColor">#F25022</Color>


        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource PrimaryDarkColor}" />
        </Style>

        

    </Application.Resources>
</prism:PrismApplication>